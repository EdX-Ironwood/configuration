{%- if "account" in nginx_default_sites -%}
  {%- set default_site = "default_server" -%}
{%- else -%}
  {%- set default_site = "" -%}
{%- endif -%}

server {
  listen {{ ACCOUNT_NGINX_PORT }} {{ default_site }};
  server_name ~^((stage|prod)-)?account.*;

  {% include "handle-tls-redirect-and-ip-disclosure.j2" %}

  location / {
    root /edx/app/account/account/dist;
    index index.html;
  }
}

server {
  listen {{ ACCOUNT_SSL_NGINX_PORT }} ssl;
  server_name ~^((stage|prod)-)?account.*;
  ssl_certificate /etc/ssl/certs/wildcard.sandbox.edx.org.pem;
  ssl_certificate_key /etc/ssl/private/wildcard.sandbox.edx.org.key;
  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains";
  location / {
    root /edx/app/account/account/dist;
    index index.html;
  }
}
